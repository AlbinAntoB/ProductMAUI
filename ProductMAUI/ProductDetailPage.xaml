<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProductMAUI.ProductDetailPage"
             Title="ProductDetailPage">
    <StackLayout Padding="10">
        <Label x:Name="ProductTitle" FontSize="24" />
        <Label x:Name="ProductPrice" FontSize="20" TextColor="Gray" />
        <Label x:Name="ProductDescription" FontSize="16" TextColor="DarkGray" />
    </StackLayout>
</ContentPage>